<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<div class="container mx-auto row g-4">
    <div class="d-flex justify-content-around align-items-center">
        <div class="d-flex align-items-center">
            <h3 class="text-success" id="post-title" data-post-id="{{postData.id}}" data-logged-in-user="{{loggedInUser.user_id}}">{{postData.title}}</h3>
        </div>
        {{#if loggedIn}}
        <div class="d-flex">
            <i class="fas fa-edit text-darkest-light dark-hover" id="edit-post-btn" type="button"></i>
            <span class="border-darkest-light mx-3 border-end border-2"></span> 
            <p class="fas fa-trash text-darkest-light dark-hover" type="button" id="delete-post-modal-btn"></p>
        </div>
        {{/if}}
    </div>
    {{>dashboard/edit-post-modal postData}}
    {{>dashboard/delete-post-modal postData}}
    <hr class="m-1">
    <section class="col-lg-12 ">
        <div class="d-flex align-items-center">
            <h4 class="text-success">Information</h4>
        </div>
        <p class="fw-bold mb-0">Created: <span id="start-date">{{format_date postData.created_at}}</span></p>
        </p>
        <h4 class="text-success">Post</h4>
        <p class="pre-wrap">{{postData.post}}</p>
        <div class="d-flex justify-content-between align-items-center">
            <h4 class="text-success">Comments</h4>
            <p class="text-darkest-light fs-6 my-auto dark-hover" type="button" id="new-comment-btn"
                data-bs-toggle="collapse" data-bs-target="#comment-collapsable-div" aria-expanded="false"
                aria-controls="comment-collapsable-div">
                <span class="fw-bold">+</span>
                Add Comment
            </p>
        </div>
        {{!-- Create New Comment Form--}}
        {{>dashboard/new-comment-collapsable}}
        {{#if postData.comments}}
        <hr class="mt-0 mb-2">
        {{/if}}
        {{#each postData.comments as |comment|}}
        <div note-id="{{id}}">
            <p class="mb-2 pre-wrap">{{comment.comment_text}}</p>
            <p class="fw-light fs-7 mb-1 text-darkest-light">Posted: {{format_date comment.created_at}}</p> 
            <p class="fw-light fs-7 mb-1 text-darkest-light">Created by: {{comment.username}}</p>     
            <hr class="my-2">
        </div>
        {{/each}}
    </section>
</div>
<script src="../assets/js/logout.js"></script>
<script src="../assets/js/new-blogpost.js"></script>
<script src="../assets/js/blogpost-page.js"></script>