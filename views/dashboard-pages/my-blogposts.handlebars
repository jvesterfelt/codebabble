<div class="row container mx-auto g-4">
{{>dashboard/new-blogpost-modal loggedInUser}}
<div class="d-flex justify-content-between align-items-center">
    <h3 class="text-primary">My Blogposts</h3>
    <p class="text-darkest-light fs-6 my-auto" type="button" id="new-post-btn" data-bs-toggle="modal" data-bs-target="#new-post-modal"><span class="fw-bold">+</span> Create a New Blogpost</p>
</div>
    <hr class="m-1">
    {{#if posts}}
    {{#each posts as |post|}}
        {{>postCard post}}
    {{/each}}
    {{else}}
        <h5 class="text-darkest-light">You don't have any posts yet. Create your new post! <span type="button" id="new-post-btn" data-bs-toggle="modal" data-bs-target="#new-post-modal" class="text-primary">Click here to get started!</span></h5>
    {{/if}}
</div>
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="/assets/js/logout.js"></script>
<script src="/assets/js/new-blogpost.js"></script>