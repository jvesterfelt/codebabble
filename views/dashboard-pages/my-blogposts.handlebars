<div class="row container mx-auto g-4">
{{>dashboard/new-blogpost-modal loggedInUser}}
<div class="d-flex justify-content-between align-items-center">
    <p class="text-darkest-light fs-6 my-auto" type="button" id="new-post-btn" data-bs-toggle="modal" data-bs-target="#new-post-modal"><span class="fw-bold">+</span> New Posting</p>
    <h3 class="text-success">My Blogposts</h3>
</div>
    <hr class="m-1">
    {{#if posts}}
    {{#each posts as |post|}}
        {{>dashboardPostCard post}}
    {{/each}}
    {{else}}
        <h5 class="text-darkest-light">You don't have any posts yet. Create your new post! <span type="button" id="new-post-btn" data-bs-toggle="modal" data-bs-target="#new-post-modal" class="text-success">Click here to get started!</span></h5>
    {{/if}}
</div>
<script src="/assets/js/logout.js"></script>
<script src="/assets/js/new-blogpost.js"></script>